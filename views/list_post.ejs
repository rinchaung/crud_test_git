<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-hover table-straid">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users.length > 0){ %>
                        <% for(let user of users){ %>
                            <tr>
                                <td><%= user.name %> </td>
                                <td><%= user.email %> </td>
                                <td>
                                    <a href="/edit_post/<%= user._id %>" class="btn btn-success btm-sm">Edit</a>
                                    <form action="/delete_post/<%= user._id %>" method="POST">
                                        <button  type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>