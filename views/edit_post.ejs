<link rel="stylesheet" href="css/bootstrap.min.css">

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form action="/update_post/<%= user._id %>" method="POST" class="mt-5">
                <!-- Header -->
                <h2 class="create_head">Update your account</h2>

                <!-- Name -->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" value="<%= user.name %>" class="form-control" placeholder="Type your name..." required>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" value="<%= user.email %>" class="form-control" placeholder="Type your email..." required>
                </div>

                <!-- Save button -->
                <button type="submit" class="btn btn-danger btn-sm">Update</button>
            </form>
        </div>
    </div>
</div>